<div id="alert-wrapper">
<%= render("alert_box", type: "notice", body: notice) if !notice.nil? %>
<%= render("alert_box", type: "alert", body: alert) if !alert.nil? %>
</div>
<div class="index-wrapper"> 
    <div id="left-menu" class="menu">
        <%= link_to(new_task_path, id:"btn-add", alt: "Add") do %>
            <%= image_tag "add.png"%>
        <% end %>
        <%= link_to(destroy_user_session_path, method: :delete, alt: "Logout") do %>
                <%= image_tag "logout.png"%>
        <% end %>
    </div>
    <div id="list-wrapper"> 
        <%= render 'list', overdue: @overdue, today_due: @today_due, today_work: @today_work, upcoming: @upcoming %>
    </div>
    <div id="slider"></div>
    <div id="calendar-wrapper">
        <%= render 'calendar' %>
    </div>
</div>
