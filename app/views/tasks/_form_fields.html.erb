<div class="row">
  <div class="col-md-3">
    <%= f.label :title %>
  </div>
  <div class="col-md-4">
    <%= f.text_field :title %>
  </div>
</div>
<div class="row">
  <div class="col-md-3">
    <%= f.label :description %>
  </div>
  <div class="col-md-6">
    <%= f.text_area :description %>
  </div>
</div>
<div class="row">
  <div class='col-md-6'>
    <div class='form-group'>
      <%= f.label :start, 'Start', class: 'control-label' %>
      <div class="datetime-picker" id="datetime-picker-start" data-td-target-input="nearest" data-td-target-toggle='nearest'>
        <%= f.text_field :start, value: f.object.start ? f.object.start.strftime('%B %d, %Y %I:%M %p') : nil, class: "f-control datetimepicker-input", data: {"td-target": "#datetime-picker-start", "td-toggle": "datetimepicker"} %>
        </div>
      </div>
    </div>
  </div>
  <div class='col-md-6'>
    <div class='form-group'>
      <%= f.label :due, 'Due', class: 'control-label' %><br>
      <div class="datetime-picker" id="datetime-picker-due" data-target-input="nearest">
        <%= f.text_field(:due, value: f.object.due ? f.object.due.strftime('%B %d, %Y %I:%M %p') : nil, class: "f-control datetimepicker-input", data: {"td-target": "#datetime-picker-due", "td-toggle": "datetimepicker"}) %>
      </div>
    </div>
  </div>
</div>
<%= f.submit submit_text %>