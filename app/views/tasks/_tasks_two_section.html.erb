<div class="<%= local_assigns[:class] %> mid-section">
    <h2><%= local_assigns[:title] %></h2>
    <div class="section-collapsible">
        <h3>due</h3>
        <div class="dark-section">
        <% unless local_assigns[:tasks_due].empty? %>
        <ul>
        <% local_assigns[:tasks_due].each do |t| %>
            <li class="task">
            <div class="task-wrapper">
                <div class="check-box-wrapper"> 
                <% if t.complete%>
                    <input type="checkbox" data-task-id="<%=t.id%>" aria-labelledby="<%=t.title%>" checked>
                <% else %>
                    <input type="checkbox" data-task-id="<%=t.id%>" aria-labelledby="<%=t.title%>">
                <% end %>
                <span class="checkmark"></span>
                </div>
                <div class="title-date-wrapper">
                <% if t.complete %>
                    <p class="title"><%= link_to t.title, task_path(t), class:"completed", "data-task-id" => t.id  %></p>
                <% else %>
                    <p class="title"><%= link_to t.title, task_path(t), "data-task-id" => t.id  %></p>
                <% end %>
                </div>
            </div>
            </li>
        <% end %>
        </ul>
        <% else %>
        <p class="subtle centered">No tasks due!</p>
        <% end %>
        </div>
        <h3>work</h3>
        <div class="dark-section">
        <% unless local_assigns[:tasks_work].empty? %>
        <ul>
            <% local_assigns[:tasks_work].each do |t| %>
            <li class="task">
            <div class="task-wrapper">
                <div class="check-box-wrapper"> 
                <% if t.complete%>
                    <input type="checkbox" data-task-id="<%=t.id%>" aria-labelledby="<%=t.title%>" checked>
                <% else %>
                    <input type="checkbox" data-task-id="<%=t.id%>" aria-labelledby="<%=t.title%>">
                <% end %>
                <span class="checkmark"></span>
                </div>
                <div class="title-date-wrapper">
                <% if t.complete %>
                    <p class="title"><%= link_to t.title, task_path(t), class:"completed", "data-task-id" => t.id %></p>
                <% else %>
                    <p class="title"><%= link_to t.title, task_path(t), "data-task-id" => t.id  %></p>
                <% end %>
                <% if t.start.nil?%>
                    <p class="date"><%= t.due.strftime(format='%-m/%-d/%y') %></p>
                <% else %>
                    <p class="date"><%= t.start.strftime(format='%-m/%-d/%y') %> - <%= t.due.strftime(format='%-m/%-d/%y') %></p>
                <% end %>
                </div>
            </div>
            </li> 
            <% end %>
        </ul>
        <% else %>
        <p class="subtle centered">No tasks to work on!</p>
        <% end %>
        </div>
    </div>
</div>
